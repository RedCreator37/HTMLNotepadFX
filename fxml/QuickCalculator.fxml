<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="151.0" prefWidth="455.0" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="QuickCalcController">
    <Label layoutX="6.0" layoutY="6.0" text="Enter two numbers:"/>
    <TextField fx:id="field1" layoutX="6.0" layoutY="23.0" prefHeight="27.0" prefWidth="216.0"
               promptText="first number"/>
    <TextField fx:id="field2" layoutX="229.0" layoutY="23.0" prefHeight="27.0" prefWidth="216.0"
               promptText="second number"/>
    <TextField fx:id="resultField" editable="false" layoutX="6.0" layoutY="74.0" prefHeight="27.0" prefWidth="208.0"
               promptText="result"/>
    <Label layoutX="6.0" layoutY="57.0" text="Press a button to see the result:"/>
    <Button layoutX="220.0" layoutY="74.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="32.0" text="+"
            fx:id="btnPlus"/>
    <Button layoutX="259.0" layoutY="74.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="32.0" text="-"
            fx:id="btnMinus"/>
    <Button layoutX="298.0" layoutY="74.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="32.0" text="ร"
            fx:id="btnAsterisk"/>
    <Button layoutX="337.0" layoutY="74.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="32.0" text="รท"
            fx:id="btnSlash"/>
    <Button layoutX="376.0" layoutY="74.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="32.0" text="^2"
            fx:id="btn2"/>
    <Button layoutX="416.0" layoutY="74.0" mnemonicParsing="false" text="^3" fx:id="btn3"/>
    <Button defaultButton="true" layoutX="310.0" layoutY="116.0" mnemonicParsing="false" prefHeight="27.0"
            prefWidth="65.0" text="Copy" onAction="#copyResult"/>
    <Button cancelButton="true" layoutX="384.0" layoutY="116.0" mnemonicParsing="false" prefHeight="27.0"
            prefWidth="65.0" text="Close" onAction="#close"/>
</AnchorPane>
